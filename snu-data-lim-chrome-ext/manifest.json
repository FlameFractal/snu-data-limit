{
    "name": "SNUDataLimit",
    "version": "0.0.6",
    "manifest_version": 2,
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
        },
    "browser_action": {
    	"default_icon": {
	        "19": "icons/19x19.png",
            "48": "icons/48x48.png",
            "128": "icons/128x128.png"
    	},
        "default_title": "That's the tool tip",
        "default_popup": "popup.html"
    },

    "content_scripts": [ {
    "js": [ "jquery-2.1.4.min.js" ],
    "matches": [ "http://*/*", "https://*/*"]
    }],

    "permissions": [
        "storage"
      ],    

    "background": {
	    "scripts": ["jquery-2.1.4.min.js", "background.js"],
	    "persistent": true
	}

	
}